/*add background image to the body*/
body{
	background-color: #84e4f7;
}

ul{
	margin-left: 40%;
}
li{
	display: inline;
	list-style-type: none;
	margin-right: 20%;
	
}
/*style the navigation body*/
.header-body{
	height:45px;
	width:100%;
	background-color:rgba(0, 0, 0,0.6);
	position:fixed;
	z-index:1;
	
}
/*style the navigation body*/
.header{
	margin-right: 50%;
}
.header a{
	text-decoration: none;
	color: white;
}
.header a:hover{
	text-decoration: underline;
	text-decoration-thickness:3px;
	text-decoration-color:red;
}
/*plan your trip tab in navigation bar*/
.list2{
	position:absolute;
	left: 48%;
}
/*google translator style*/
#google_translator{
	
	position:absolute;
	top: 0%;
	right: 5%;
	
	
}
.goog-logo-link {
    display:none !important;
} 
    
.goog-te-gadget {
    color: transparent !important;
}

.goog-te-banner-frame.skiptranslate {
display: none !important;
}
